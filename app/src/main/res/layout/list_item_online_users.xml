<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imageView_onlineIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/online_dot_icon" />

    <TextView
        android:id="@+id/textView_userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/imageView_onlineIcon"
        android:layout_toLeftOf="@id/textView_lastActive"
        android:layout_toRightOf="@id/imageView_onlineIcon"
        android:layout_toStartOf="@id/textView_lastActive"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:text="Zain Ul Abideen"
        android:textColor="@color/colorTitleText" />

    <TextView
        android:id="@+id/textView_lastActive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:text="1min ago" />

</RelativeLayout>